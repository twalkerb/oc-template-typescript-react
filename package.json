{
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.3",
    "@babel/plugin-transform-modules-commonjs": "^7.21.2",
    "@types/react": "^16.9.6",
    "codecov": "3.6.5",
    "eslint": "^7.32.0",
    "husky": "^0.14.3",
    "jest": "29.5.0",
    "lerna": "^2.4.0",
    "lint-staged": "7.2.0",
    "prettier-eslint-cli": "^5.0.1"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "coverage": "codecov",
    "clean": "lerna clean",
    "dev": "jest --watch",
    "updated": "lerna updated",
    "lint": "eslint packages",
    "test": "jest",
    "publish": "lerna publish --exact",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "packages"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/**/*.js",
      "!packages/coverage/**/*",
      "!node_modules/**",
      "!packages/**/scaffold/**/*",
      "!packages/**/utils/**/*"
    ]
  }
}
